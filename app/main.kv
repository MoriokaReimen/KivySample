#:kivy 1.1.0
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

Root:
    console_text: console_text
    send_data: send_data

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                id: console_text
                text_size: self.size
                halign: 'left'
                valign: 'top'
                text: 'hoge'
                markup: True
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Start CAN'
                on_release: root.show_load()
        BoxLayout:
            size_hint_y: None
            height: 30
            Label:
                text: 'Send Data'
            DataInput:
                id: send_data
                multiline: False
            Button:
                text: 'Send'
                on_release: root.can_send()
